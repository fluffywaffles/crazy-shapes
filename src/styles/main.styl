html, body
  margin 0
  width 100%
  height 100%

.rect, .tri, .trap
  position absolute
  left 0
  top 0

.rect
  top  calc(25% - 75px)
  left calc(50% - 150px)

  width 300px
  height 150px

  background #fba

.tri
  top  calc(75% - 240px)
  left calc(50% - 160px)

  width 0
  height 0

  border-width 160px
  border-color transparent transparent #afa transparent
  border-style solid

.trap
  left calc(50% - 100px)
  top  calc(50% - 80px)

  width 200px
  height 160px

  background #abe

  .left, .right
    position absolute

    top 40px

    width 0
    height 0

    border-width 40px
    border-color transparent #abe #abe transparent
    border-style solid

    transform scaleY(2)
  .left
    left -80px
  .right
    right -80px
    border-color transparent transparent #abe #abe

.trap
  transition all ease 1s
  .left, .right
    transition all ease 1s

.trap-2
  top calc(50% - 80px - 200px)

.trap-3
  top calc(50% - 80px + 200px)

body:hover .trap-1
  height 90px
  .left
    top 10px
    transform scaleY(1.125)
  .right
    top 10px
    transform scaleY(1.125)

body:hover .trap-2
  top calc(50% - 80px)
  transform rotateZ(45deg)
  .left
    border-color transparent darken(#abe, 10%) darken(#abe, 10%) transparent
  .right
    border-color transparent transparent darken(#abe, 10%) darken(#abe, 10%)
body:hover .trap-3
  top calc(50% - 80px)
  transform rotateZ(-45deg)
  .left
    border-color transparent darken(#abe, 5%) darken(#abe, 5%) transparent
  .right
    border-color transparent transparent darken(#abe, 5%) darken(#abe, 5%)
